{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "es2016",
    "lib": [
      "es2017",
      "es2016",
      "esnext.asynciterable",
      "dom"
    ],
    "paths": {
      "@": ["./"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
